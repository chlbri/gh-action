{
  "name": "typescript-action",
  "version": "0.0.0",
  "private": true,
  "description": "TypeScript template action",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "remove": "rm -rf node_modules pnpm-lock.json",
    "clean": "pnpm run remove && pnpm install",
    "prettier": "prettier --check '**/*.ts'",
    "eslint": "eslint src/**/*.ts --fix",
    "lint": "pnpm run prettier && pnpm run eslint",
    "lint-watch": "onchange --await-write-finish 5500 \"**/*\" -- pnpm run lint",
    "test": "vitest run --passWithNoTests",
    "build:test": "pnpm run build && pnpm run package && pnpm run test",
    "package": "ncc build --source-map --license licenses.txt -o build",
    "build:package": "pnpm run build && pnpm run package",
    "p-q": "pretty-quick --staged --pattern \"**/*.*(ts|tsx)\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/actions/typescript-action.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "shelljs": "^0.8.5"
  },
  "devDependencies": {
    "@types/node": "^18.11.17",
    "@types/shelljs": "^0.8.11",
    "@typescript-eslint/eslint-plugin": "^5.47.0",
    "@typescript-eslint/parser": "^5.47.0",
    "@vercel/ncc": "^0.36.0",
    "eslint": "^8.30.0",
    "husky": "^8.0.2",
    "js-yaml": "^4.1.0",
    "onchange": "^7.1.0",
    "prettier": "2.8.1",
    "pretty-quick": "^3.1.3",
    "rimraf": "^3.0.2",
    "typescript": "^4.9.4",
    "vite": "3.2.4",
    "vite-tsconfig-paths": "^4.0.3",
    "vitest": "0.25.2"
  }
}
